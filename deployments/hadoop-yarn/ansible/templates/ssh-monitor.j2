# Global settings
ForwardAgent yes
ForwardX11   no
PasswordAuthentication no
ServerAliveInterval 60
ServerAliveCountMax 5

# Primary gateway node.
Host zeppelin
    User {{ hostvars['zeppelin'].login }}
    HostName {{ zeppelinnodes.openstack_servers[0].accessIPv4 }}
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

# Master nodes.
{% for hostname in groups['masters'] %}
Host {{ hostname }}
    User {{ hostvars[hostname]['login'] }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['zeppelin'].login }} zeppelin
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

{% endfor %}
# Worker nodes.
{% for hostname in groups['workers'] %}
Host {{ hostname }}
    User {{ hostvars[hostname]['login'] }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['zeppelin'].login }}  zeppelin
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

{% endfor %}

Host monitor        
    User {{ hostvars['monitor']['login'] }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['monitor'].login }}  zeppelin
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m


